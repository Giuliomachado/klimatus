<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iconRT"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/tempRT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="20º"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cityRT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="São José dos Campos, SP"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/condRT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Ensolarado"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/uvRT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="UV: 11"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/updRT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Seg, 10:00"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="185dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:srcCompat="@android:drawable/btn_dropdown" />

</LinearLayout>